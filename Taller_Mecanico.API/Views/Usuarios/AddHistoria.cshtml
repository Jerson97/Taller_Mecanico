@model Taller_Mecanico.API.Models.HistoriaViewModel

@{
    ViewData["Title"] = "Create";
}

<h2>Crear</h2>

<h4>Historia</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="AddHistoria" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="VehiculoId" />

            <partial name="_Historia" />

            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
                <a asp-action="DetailsVehiculo" asp-route-id="@Model.VehiculoId" class="btn btn-success">Regresar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

